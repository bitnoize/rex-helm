auto ifb0
iface ifb0 inet manual
  post-up /sbin/ip link set dev $IFACE qlen 30
  post-up /sbin/tc qdisc add dev eth0 handle ffff: ingress
  post-up /sbin/tc filter add dev eth0 parent ffff: \
    protocol ip u32 match u32 0 0 action mirred egress \
    redirect dev $IFACE
# post-up /sbin/tc filter add dev eth0 parent ffff: \
#   protocol ipv6 u32 match u32 0 0 action mirred egress \
#   redirect dev $IFACE
  post-down /sbin/tc qdisc del dev eth0 ingress

