server {
<%= join "\n", map { sprintf "    listen %s:%s;", $_, $site->{port} } @{ $site->{address} } %>
<%= join "\n", map { sprintf "    server_name %s;", $_ } @{ $site->{domain} } %>

    root /var/www/default;
    index index.html;

    location /nginx-status {
        stub_status on;

        allow 127.0.0.1;
        deny all;
    }
}

