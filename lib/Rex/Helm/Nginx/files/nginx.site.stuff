server {
<%= join "\n", map { sprintf "    listen %s:%s;", $_, $site->{port} } @{ $site->{address} } %>
<%= join "\n", map { sprintf "    server_name %s;", $_ } @{ $site->{domain} } %>

    access_log /var/log/nginx/stuff.access.log;
    error_log  /var/log/nginx/stuff.error.log;

    root /var/www/stuff;
}

