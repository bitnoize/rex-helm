# IPv4 capable hosts
127.0.0.1       localhost
<%= sprintf "%-15s", $system->{address} %> <%= $system->{hostname} %>

# IPv6 capable hosts
::1     localhost ip6-localhost ip6-loopback
ff02::1 ip6-allnodes
ff02::2 ip6-allrouters

