LoadPlugin network

<Plugin network>
<% if ( $collectd->{server} ) { %>
  <Listen "<%= $collectd->{address} %>" "<%= $collectd->{port} %>">
    Interface "<%= $collectd->{interface} %>"
    SecurityLevel "Encrypt"
    AuthFile "/etc/collectd/passwd"
  </Listen>
  MaxPacketSize 1452
<% } else { %>
  <Server "<%= $collectd->{remote} %>" "<%= $collectd->{port} %>">
    Interface "<%= $collectd->{interface} %>"
    SecurityLevel "Encrypt"
    Username "<%= $collectd->{username} %>"
    Password "<%= $collectd->{password} %>"
  </Server>
  TimeToLive 128
<% } %>
  ReportStats false
</Plugin>

